<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/singleRowLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgHoroscopeSymbol"
        android:layout_width="150dp"
        android:scaleType="fitCenter"
        android:layout_height="150dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/yengec4" />
<LinearLayout
    android:layout_marginHorizontal="16dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_weight="3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:textSize="24sp"
        android:textStyle="italic|bold"
        android:id="@+id/horoscopeNameText"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burc Adı" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <TextView
        android:id="@+id/horoscopeDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:fontFamily="cursive"
        android:text="19 Şubat - 20 Mart"
        android:textSize="18sp"
        android:textStyle="italic" />
</LinearLayout>



</LinearLayout>